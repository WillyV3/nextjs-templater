project_name: "nextui"

before:
  hooks:
    - go mod tidy
    - go generate ./...

builds:
  - id: "nextjs-templater"
    binary: "nextjs-templater" # Replace with your binary name
    env:
      - CGO_ENABLED=0
    goos:
      - linux
      - windows
      - darwin
    goarch:
      - "386"
      - amd64
      - arm64
    ignore:
      - goos: darwin
        goarch: "386"
    ldflags:
      - -s -w -X main.version={{.Version}}
    mod_timestamp: "{{ .CommitTimestamp }}"
    flags: ["-trimpath"]

archives:
  - id: "nextjs-templater"
    format: tar.gz
    name_template: >-
      {{ .ProjectName }}_
      {{- title .Os }}_
      {{- if eq .Arch "amd64" }}x86_64
      {{- else if eq .Arch "386" }}i386
      {{- else }}{{ .Arch }}{{ end }}
    format_overrides:
      - goos: windows
        format: zip

checksum:
  name_template: 'checksums.txt'

snapshot:
  name_template: "{{ incpatch .Version }}-next"

changelog:
  sort: asc
  use: github
  filters:
    exclude:
      - '^docs:'
      - '^test:'
      - '^chore'
      - 'Merge pull request'
      - 'Merge remote-tracking branch'
      - 'Merge branch'
      - 'go mod tidy'
  groups:
    - title: "New Features"
      regexp: "^.*feat[(\\w)]*:+.*$"
      order: 0
    - title: "Bug Fixes"
      regexp: "^.*fix[(\\w)]*:+.*$"
      order: 10
    - title: "Documentation"
      regexp: "^.*docs[(\\w)]*:+.*$"
      order: 20
    - title: "Other Changes"
      order: 999

# Homebrew tap configuration
brews:
  - name: "nextjs-templater"
    repository:
      owner: WillyV3
      name: homebrew-tap
    homepage: "https://github.com/WillyV3/nextjs-templater.git" # Replace with your repo
    description: "A CLI tool written in Go" # Replace with your description
    license: "MIT"
    dependencies: []
    install: |
      bin.install "nextjs-templater"
    test: |
      system "#{bin}/nextjs-templater", "--version"

release:
  name_template: "{{.ProjectName}}-v{{.Version}}"
  footer: |

    ---

    ðŸ¤– Generated with [GoReleaser](https://goreleaser.com)!

    **Install:** `brew install willyv3/tap/nextui`

metadata:
  mod_timestamp: "{{ .CommitTimestamp }}"

# Author information
authors:
  - name: "William Van Sickle"
    email: "vansicklewilly@gmail.com"